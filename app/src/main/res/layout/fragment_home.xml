<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_navy_blue"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track your wellness journey"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="32dp" />

        <!-- Habits Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Habits Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_navy_blue"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progressHabits"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="60"
                        android:progressTint="@color/accent_cobalt_blue"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvHabitsPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_cobalt_blue" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHabitsProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 / 5 Habits Completed"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Mood Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMoodStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMoodEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜Š"
                    android:textSize="48sp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mood Check"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary_navy_blue"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMoodStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today you're feeling Happy"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_navy_blue"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuickMood"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Log Mood"
                android:textSize="14sp"
                android:backgroundTint="@color/secondary_navy_blue"
                android:textColor="@color/white"
                app:cornerRadius="28dp"
                android:layout_marginEnd="8dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuickHabit"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Add Habit"
                android:textSize="14sp"
                android:backgroundTint="@color/accent_cobalt_blue"
                android:textColor="@color/white"
                app:cornerRadius="28dp"
                android:layout_marginStart="8dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconTint="@color/white" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWaterReminder"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Water Reminder"
            android:textSize="14sp"
            android:backgroundTint="@color/accent_electric_blue"
            android:textColor="@color/white"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_menu_compass"
            app:iconTint="@color/white" />

    </LinearLayout>

</ScrollView>